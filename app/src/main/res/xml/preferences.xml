<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference android:layout="@layout/preference_header" />

    <PreferenceCategory android:title="Settings">
        <SwitchPreference
            android:icon="@mipmap/ic_launcher"
            android:key="quick_guide"
            android:title="@string/quick_guide" />

        <SwitchPreference
            android:icon="@mipmap/ic_launcher"
            android:key="sound_effects"
            android:title="@string/sound_effects" />

        <Preference
            android:icon="@mipmap/ic_launcher"
            android:key="language"
            android:summary="Default Language"
            android:title="@string/language" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Creators">
        <Preference
            android:icon="@mipmap/ic_launcher"
            android:key=""
            android:summary="Delacrix Morgan"
            android:title="@string/preference_engineer">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/creator_engineer_morgan_github" />
        </Preference>

        <Preference
            android:icon="@mipmap/ic_launcher"
            android:key=""
            android:summary="(On Vacation)"
            android:title="@string/preference_designer" />

    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:icon="@mipmap/ic_launcher"
            android:key=""
            android:summary="GitHub Repository"
            android:title="@string/preference_source_code">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/github_sourcecode" />

        </Preference>

        <Preference
            android:icon="@mipmap/ic_launcher"
            android:key="credit_library"
            android:summary="@string/preference_credits_summary"
            android:title="@string/preference_credits" />

        <Preference
            android:icon="@mipmap/ic_launcher"
            android:key="version_number"
            android:summary="1.0.0"
            android:title="@string/preference_version" />

    </PreferenceCategory>

    <Preference android:layout="@layout/preference_footer" />

</PreferenceScreen>