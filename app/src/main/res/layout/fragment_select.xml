<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_pink">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fragment_select_cup_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp">

            <ImageView
                android:id="@+id/image_cup_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cup_whole" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_select_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_select_cup_status_layout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="2 Kings Left"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/status_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Come On"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_endgame"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_select_status_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_rounded_white"
            android:text="Done Yet?"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_select_card_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>