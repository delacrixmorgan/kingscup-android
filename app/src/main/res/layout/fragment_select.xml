<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_select_accent_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_select_accent_card"
        android:background="@color/colorPinkTheme" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_select_quit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_clear_black_48dp"
        app:backgroundTint="@color/white"
        app:elevation="6dp"
        app:fabSize="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_select_bottom_layout"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_select_image_cup_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cup_whole" />

        <TextView
            android:id="@+id/fragment_select_status_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="2 Kings Left"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/fragment_select_status_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Come On"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/fragment_select_button_endgame"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_white"
            android:text="Done Yet?"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_select_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_select_card_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/fragment_select_card_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:max="52"
            android:progress="15" />
    </LinearLayout>

</RelativeLayout>