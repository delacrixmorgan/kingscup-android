<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_pink"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|start"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/card_light_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="J"
            android:textColor="@color/colorPinkTheme"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/card_light_sm_symbol"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/heart_pink" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_light_lg_symbol"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/jack_pink" />

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Jack"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/action_11"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_white"
            android:text="@string/next_1"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="55dp"
        android:rotation="-180">

        <TextView
            android:id="@+id/card_dark_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="J"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/card_dark_sm_symbol"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/heart_dark" />

    </LinearLayout>


</RelativeLayout>